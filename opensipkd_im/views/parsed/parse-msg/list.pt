<html metal:use-macro="load: ../../templates/base.pt">

<div metal:fill-slot="content">
<h3>${request.title}</h3>
<hr>
<table id="table1" class="table ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tanggal</th>
            <th>Pengirim</th>
            <th>Field 03</th>
            <th>Field 04</th>
            <th>Field 05</th>
            <th>Field 06</th>
            <th>Field 07</th>
            <th>Field 08</th>
            <th>Field 09</th>
            <th>Flag</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
</div>
  <div metal:fill-slot="scripts">
    <script>
      var mID;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = "/parse/msg/";
      Number.prototype.formatMoney = function(decPlaces, thouSeparator, decSeparator) {
        var n = this,
            decPlaces = isNaN(decPlaces = Math.abs(decPlaces)) ? 2 : decPlaces,
            decSeparator = decSeparator == undefined ? "." : decSeparator,
            thouSeparator = thouSeparator == undefined ? "," : thouSeparator,
            sign = n < 0 ? "-" : "",
            i = parseInt(n = Math.abs(+n || 0).toFixed(decPlaces)) + "",
            j = (j = i.length) > 3 ? j % 3 : 0;
        return sign + (j ? i.substr(0, j) + thouSeparator : "") + i.substr(j).replace(/(\d{3})(?=\d)/g, "$1" + thouSeparator) + (decPlaces ? decSeparator + Math.abs(n - i).toFixed(decPlaces).slice(2) : "");
      };

        
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom"           : '<"toolbar">lfrtip',
          "sAjaxSource"    : oTableUrl+'grid/act',
          "bStateSave"     : true,
          "bServerSide"    : true,
          "bProcessing"    : true,
          "bScrollCollapse": true,
          "bSort"          : true,
          "bInfo"          : false,
          "bFilter"        : true,
          "bAutoWidth"     : false,
          "bPaginate"      : true,
           "order": [[ 0, "desc" ]],
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [{
                        "bSearchable": false,
                        "bVisible": false,
                        "aTargets": [0]
                    }],
          "aoColumns": [
              null,
              {"width": "120px"},
              {"width": "120px"},
              null,
              null,
              null,
              null,
              null,
              null,
              null,
              {"width": "50px", "sClass":"center"},
          ]
        });

        var tb_array = [
          '<div class="btn-group pull-left">',
          '	<!--button id="btn_add"    class="btn btn btn-primary" type="button">Tambah</button>',
          '	<button id="btn_edit"   class="btn btn btn-primary" type="button">Edit</button-->',
          '	<button id="btn_delete" class="btn btn btn-danger"  type="button">Cancel</button>',
          '	<button id="btn_close"  class="btn btn btn-warning" type="button">Tutup</button>',
          '	<button id="btn_csv"  class="btn btn btn-primary" type="button">CSV</button>',
          '	<label>&nbsp; Tanggal: <input type="date" id="dt_filter"  class="input-sm"></label>',
          '	&nbsp;',
          '</div>',
        ];


        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);
                //mID = aData[0];
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                mID = aData[0];
                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');
                        /*oTable2.fnReloadAjax("egaji/grid2?id=" + mID);*/                
            }
        });
        
        $('#btn_add').click(function () {
            window.location = oTableUrl+'add';
        });

        $('#btn_edit').click(function () {
            if (mID) window.location = oTableUrl+mID+'/edit';
            else alert('Pilih Baris yang akan di edit');
        });

        $('#btn_delete').click(function () {
            if (mID) window.location = oTableUrl+mID+'/delete';
            else alert('Pilih Baris yang akan di hapus');
        });

        $('#btn_csv').click(function () {
            window.location = oTableUrl+'csv?tgl='+$("#dt_filter").val();
			  });

        $("#btn_close").click(function () {
            window.location = '/home';
            return false;
        });
        
        $("#dt_filter").pickadate(
            { "selectMonths": true, 
              "submitFormat": "yyyy-mm-dd", 
              "selectYears": true, 
              "format": "yyyy-mm-dd"}
            );
        $("#dt_filter").change(function () {
            val = $("#dt_filter").val();
            $("input[type='search']").val( val );
            oTable.fnFilter( val );
            });
        })
    </script>
</div>

</html>
